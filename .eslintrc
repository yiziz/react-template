{
  "parser"  : "babel-eslint",
  "extends" : [
    "airbnb"
  ],
  "plugins" : [
    "flowtype"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "Action"       : false,
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "react/jsx-curly-spacing": [0, "always"],
    "arrow-parens": [1, "always"],
    "semi": [2, "always"],
    "space-infix-ops": 0,
    "max-len": [2, 120, 2],
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1,

    "no-unused-expressions": [2, { "allowShortCircuit": true }],
    "new-cap": [2, { "capIsNewExceptions": [
      "Record", "Map", "OrderedMap", "List", "Scroll",
      "DragSource", "DragDropContext", "DropTarget"
    ] }],
    "no-unused-vars": [2, {"args": "none"}],

    "prefer-template": 1,

    "comma-dangle": [0, "never"],
    "jsx-quotes": [0, "prefer-double"],
    "template-curly-spacing": [0, "never"],
    "dot-notation": 0,
    "arrow-body-style": [0, "as-needed"],
    "quotes": 0,
    "array-bracket-spacing": [0, "always"],
    "radix": 0,
    "no-param-reassign": 0,
    "no-use-before-define": 0,

    "import/no-extraneous-dependencies": 0,
    "import/imports-first": 0,
    "import/no-unresolved": 0,
    "no-underscore-dangle": 0,
    "react/jsx-no-target-blank": 0,

    "eol-last": [2, "always"],
    "react/forbid-prop-types": 0,
    "import/first": 0,
    "import/extensions": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "func-names": ["error", "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".jsx", ".tsx"] }]
  }
}
